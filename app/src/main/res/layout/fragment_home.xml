<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/bt_filter"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/filter4"
        android:layout_gravity="right"
        android:layout_marginRight="63dp"
        android:layout_marginTop="87dp"/>

    <Button
        android:id="@+id/bt_bookmark"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/bt_near_store"
        android:text="My 매장"
        android:background="@drawable/home_button_style"
        android:textColor="#aa886d"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_near_store"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/home_button_style"
        android:text="전체 매장"
        android:textColor="#aa886d"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_map"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/bt_near_store"
        android:background="@drawable/home_button_style"
        android:text="지    도"
        android:textColor="#aa886d"
        android:textStyle="bold" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_near_store"
        android:layout_width="360dp"
        android:layout_height="450dp"

        android:layout_gravity="center"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="70dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_bookmark_store"
        android:layout_width="360dp"
        android:layout_height="450dp"

        android:layout_gravity="center"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="70dp"
        android:visibility="invisible" />

